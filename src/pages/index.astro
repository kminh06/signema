---
import MoviesList from '../components/MoviesList'
import Footer from '../components/Footer'
import Quote from '../components/Quote'
import Header from '../components/Header'
import '../globals.css'
import NewReleases from '../components/NewReleases'
import ShowsList from '../components/ShowsList'
import SearchBar from '../components/SearchBar'

const response = await fetch('https://sigma-male-grindset-api.vercel.app/api/quotes')
let quote = {
  quote: '',
  author: '',
}

if (response.ok) {
  const data = await response.json()
  quote = {
    quote: data.quote,
    author: data.author,
  }
}

export const prerender = false

---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.webp' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='description'
      content='Explore the enigmatic world of the Sigma male through captivating movies on our dedicated website. Dive into the intriguing lives of these independent, introspective individuals as they navigate unique journeys. Discover thought-provoking stories that celebrate the quiet strength and complex personalities of Sigma males in a collection of films that challenge conventions and redefine heroism.'
    />
    <title>Signema | Free Movie Streaming</title>
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6145213958807273" crossorigin="anonymous"></script>
  </head>
  <body class="bg-zinc-900 text-zinc-100">
    <div class='flex flex-col min-h-screen'>
			<Header movie={null} year={null} no={null} selected={0} navBar={true} />
			<main class='flex-grow'>
				{quote ? <Quote quote={quote} /> : <></>}
        <SearchBar client:load />
        <NewReleases heading={'Movies'}>
          <a href="/movies" class="flex flex-col items-center text-zinc-400 transition-all hover:text-zinc-100 hover:cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm">Browse More</p>
          </a>
        </NewReleases>
        <ShowsList heading={'Shows'}>
          <a href="/shows" class="flex flex-col items-center text-zinc-400 transition-all hover:text-zinc-100 hover:cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-sm">Browse More</p>
          </a>
        </ShowsList>
			</main>
			<Footer />
		</div>
  </body>
</html>
